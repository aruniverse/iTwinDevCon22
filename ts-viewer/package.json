{
  "name": "typescript-viewer",
  "version": "0.0.1",
  "private": true,
  "description": "Using the iTwin Viewer with Typescript",
  "license": "MIT",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "type": "module",
  "main": "./index.ts",
  "scripts": {
    "build": "run-p build:**",
    "build:tsc": "tsc --project . 1>&2",
    "build:esbuild": "node esbuild.js",
    "build:assets": "node ./scripts/copyAssets.js",
    "serve": "serve -l 3001 ./public",
    "watch": "run-p \"build:** --watch\"",
    "start": "run-p watch serve"
  },
  "dependencies": {
    "@bentley/icons-generic-webfont": "^1.0.15",
    "@itwin/appui-abstract": "^4.9.4",
    "@itwin/browser-authorization": "^0.5.1",
    "@itwin/core-bentley": "^4.9.4",
    "@itwin/core-common": "^4.9.4",
    "@itwin/core-frontend": "^4.9.4",
    "@itwin/core-geometry": "^4.9.4",
    "@itwin/core-orbitgt": "^4.9.4",
    "@itwin/core-quantity": "^4.9.4",
    "@itwin/imodels-access-frontend": "latest",
    "@itwin/imodels-client-management": "latest",
    "@itwin/presentation-common": "^4.9.4",
    "@itwin/webgl-compatibility": "^4.9.4"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "~0.1.1",
    "@esbuild-plugins/node-modules-polyfill": "~0.1.2",
    "cpx2": "4.2.0",
    "esbuild": "0.15.8",
    "npm-run-all": "^4.1.5",
    "serve": "^13.0.2",
    "typescript": "~4.4.0"
  }
}
